<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout android:id="@+id/mainLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dip"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lines="2"
            android:gravity="center_horizontal"
            android:text="Getting To Know Red Crescent Hospital"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="17dip"
            android:paddingTop="5dp"
            android:paddingBottom="25dp"
            android:gravity="center_horizontal"
            android:lines="6"
            android:textColor="#666666"
            android:text="Red Crescent Hospital is a multi-specialty 'one stop' tertiary care hospital of international standard, and is fully committed in the pursuance of excellence by maintaining and providing exceptional standards." />
    </LinearLayout>

</LinearLayout>
